<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RealizaLogin</servlet-name>
        <servlet-class>br.uff.servlets.RealizaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastraAluno</servlet-name>
        <servlet-class>br.uff.servlets.CadastraAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessaLogin</servlet-name>
        <servlet-class>br.uff.servlets.ProcessaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAluno</servlet-name>
        <servlet-class>br.uff.servlets.ControllerAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformacoesAluno</servlet-name>
        <servlet-class>br.uff.servlets.InformacoesAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlanoDeEstudos</servlet-name>
        <servlet-class>br.uff.servlets.PlanoDeEstudos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerInstrutores</servlet-name>
        <servlet-class>br.uff.servlets.ControllerInstrutores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAdmin</servlet-name>
        <servlet-class>br.uff.servlets.ControllerAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DadosInstrutores</servlet-name>
        <servlet-class>br.uff.servlets.DadosInstrutores</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RealizaLogin</servlet-name>
        <url-pattern>/RealizaLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastraAluno</servlet-name>
        <url-pattern>/CadastraAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessaLogin</servlet-name>
        <url-pattern>/ProcessaLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAluno</servlet-name>
        <url-pattern>/ControllerAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformacoesAluno</servlet-name>
        <url-pattern>/InformacoesAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlanoDeEstudos</servlet-name>
        <url-pattern>/PlanoDeEstudos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerInstrutores</servlet-name>
        <url-pattern>/ControllerInstrutores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAdmin</servlet-name>
        <url-pattern>/ControllerAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DadosInstrutores</servlet-name>
        <url-pattern>/DadosInstrutores</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/erro.html</location>
    </error-page>
</web-app>
